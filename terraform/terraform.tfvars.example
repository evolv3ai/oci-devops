# Oracle Cloud Infrastructure (OCI) Configuration
# Copy this file to terraform.tfvars and fill in your actual values
# Authentication via ~/.oci/config (mounted as /oci/config in container)

# OCI Region
region = "us-ashburn-1"  # Change to your home region for free tier

# Compartment for resources
compartment_id = "ocid1.compartment.oc1..aaaaaaaaXXXXXXXXXXXXXXXXXXXXXXXX"

# SSH Key for Instance Access
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-key@example.com"

# Optional: Fallback Image OCID (if dynamic lookup fails)
# fallback_image_ocid = "ocid1.image.oc1.iad.aaaaaaaaXXXXXXXXXXXXXXXXXXXXXXXX"

# Optional: Existing Subnet ID (if not creating VCN)
# existing_subnet_id = "ocid1.subnet.oc1..aaaaaaaaXXXXXXXXXXXXXXXXXXXXXXXX"

# Optional: Custom VCN CIDR (default: 10.0.0.0/16)
# vcn_cidr = "10.0.0.0/16"

# Optional: Custom Subnet CIDR (default: 10.0.1.0/24)
# subnet_cidr = "10.0.1.0/24"
